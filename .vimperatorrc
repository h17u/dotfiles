"---------------------------------------------------------------------------
" .vimperatorrc
"---------------------------------------------------------------------------
" Initialize:"{{{
"
set runtimepath=~/.vimperator
source! ~/.vimperatorrc.local
"}}}

"---------------------------------------------------------------------------
" Basic:"{{{
"

set complete=tls

set titlestring=Firefox
set toolbars=addons
set hlsearch

set visualbell
highlight Bell display:none;


"ｺﾏﾝﾄﾞﾗｲﾝﾓｰﾄﾞ時に自動でimeをOFFにする
" http://vimperator.g.hatena.ne.jp/teramako/20090311/1236776437
style -name commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}
let g:ex_ime_mode = "inactive"
let g:textarea_ime_mode = "inactive"

set nextpattern=\bnext\b,\bmore\b,next,^次(の)?ページ,\b次.*,→\b,^>$,^(>>|≫)$,^(>|≫),(>|≫)$,^次(へ|の|ペ),^続き,\bnext\b,^>$,^(>>|»)$,^(>|»),(>|»)$,\bmore\b
set previouspattern=\bprev|previous\b,prev,^前(の)?ページ,\b前.*,\b←,^<$,^(<<|≪)$,^(<|≪),(<|≪)$,^前(へ|の|ペ),^戻る,\bprev|previous\b,^<$,^(<<|«)$,^(<|«),(<|«)$

set focuscontent

set hintmatching=custom
set hintchars=hklyuiopnmqwertasdgzxcvbjf
set status=input,location,position

set editor=vim

"}}}

"---------------------------------------------------------------------------
" Key Mappings:"{{{
"
let g:mapleader = ','
" let g:maplocalleader = 'm'
" nnoremap ; :
" nnoremap : ;


noremap <Leader>sv :source ~/.vimperatorrc<CR>:echo 'source ~/.vimperatorrc'<CR>

" jk navigation "{{{
noremap <S-j> j5
noremap <S-k> k5
"}}}

" Tab navigation"{{{
noremap <C-k> :tabprevious<CR>
noremap <C-j> :tabnext<CR>
noremap <C-n> :tabmove +1<CR>
noremap <C-p> :tabmove -1<CR>
"}}}

" Easy escape."{{{
inoremap jj           <ESC>
" cnoremap <expr> j       getcmdline()[getcmdpos()-2] ==# 'j' ? "\<BS>\<C-c>" : 'j'
cnoremap jj           <ESC>

inoremap j<Space>     j
cnoremap j<Space>     j
"}}}

"command -nargs=+ mysearch open site:twilog.org/h17u <args>
:command! -nargs=* google open google <args>
"command! svr source ~/.vimperatorrc

"yで選択範囲をコピー
noremap y :echo 'Yank!'<CR>Y

"<BS>で「戻る」
"map <BS> H
"<A-Left>/<A-Right>かh/lでタブ移動
"map <A-Left> <C-p>
"map <A-Right> <C-n>
"map h <C-p>
"map l <C-n>
"<A-Up>でその他のタブを閉じる
"map <A-Up> :tabonly<CR>
"<A-Down>で現在のタブを閉じる
"map <A-Down> d
"<S-Left>/<S-Right>で現在のタブの位置変更
"map <S-Left>  :tabmove! -1<CR>
"map <S-Right> :tabmove! +1<CR>
"sで現在のページを保存
"map s :saveas<CR>
"<A-r>でFirefoxを再起動
"map <A-r> :restart<CR>
"<A-h>でヘルプを表示
"map <A-h> :help<CR>

"}}}

"---------------------------------------------------------------------------
" Color Scheme:"{{{
"
colorscheme BrewBlue
"colorscheme Sweets
style -name tab-style-fix chrome://* <<EOM
.tab-text-shadow,
.tabs-newtab-button {
  display: none !important;
}
EOM

"}}}

"---------------------------------------------------------------------------
" Plugin:"{{{
"

let g:plugin_loader_roots = "~/src/vimperator-plugins/ ~/.vimperator/load/"
let g:plugin_loader_plugins = "copy,bitly,auto_source"

" hatenabookmark.js "{{{
javascript if (typeof hBookmark != 'undefined') liberator.loadScript('chrome://hatenabookmark/content/vimperator/plugin/hatenabookmark.js', {__proto__: this});
set complete+=H
"}}}

